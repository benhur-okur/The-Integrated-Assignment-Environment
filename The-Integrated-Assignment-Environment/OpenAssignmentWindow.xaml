<Window x:Class="The_Integrated_Assignment_Environment.OpenAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Assignment"
        Height="500" Width="800"
        Background="#f5f7fa"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/logo.ico">

	<Window.Resources>
		<Style TargetType="Button" x:Key="SoftButtonStyle">
			<Setter Property="Background" Value="#2C3E50"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="35"/>
			<Setter Property="BorderBrush" Value="#2C3E50"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid Margin="20">
		<StackPanel>
			
			<TextBlock Text="Select a Project to Open"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

			<ComboBox x:Name="cmbProjects"
                      Height="40"
                      FontSize="14"
                      DisplayMemberPath="ProjectName"
                      Margin="0,0,0,20"/>

			<Button Content="Open"
                    Width="120"
                    Click="btnOpen_Click"
                    Style="{StaticResource SoftButtonStyle}"/>

		</StackPanel>
	</Grid>
</Window>


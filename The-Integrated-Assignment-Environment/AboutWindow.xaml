<Window x:Class="The_Integrated_Assignment_Environment.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f7fa"
        Icon="Resources/logo.ico">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="About This Application"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Foreground="#2C3E50"/>

            <TextBlock Text="Integrated Assignment Environment (IAE) helps instructors to:"
                       FontSize="14" Foreground="#333" TextWrapping="Wrap"/>
            <TextBlock Text="• Create and manage programming assignments" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="• Import student ZIP submissions" Margin="10,2,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="• Compile, run, and compare outputs" Margin="10,2,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="• Manage different language configurations" Margin="10,2,0,10" TextWrapping="Wrap"/>
            <TextBlock Text="Developed by:"
                       FontSize="14" Foreground="#333" TextWrapping="Wrap"/>
            <TextBlock Text="Efe Serin" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Benhur Rahman Okur" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Doğa Güneş" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="İlayda Buzbuz" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Ece Naz Gökalp" Margin="10,5,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="Version: 1.1"
                       HorizontalAlignment="Right"
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>